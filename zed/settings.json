{
    "auto_install_extensions": {
        "golangci-lint": true,
        "dockerfile": true,
        "docker-compose": true
    },
    "git": {
        "inline_blame": {
            "enabled": false
        }
    },
    "base_keymap": "VSCode",
    "inlay_hints": {
        "enabled": true,
        "show_value_hints": true,
        "show_type_hints": false,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_background": false,
        "edit_debounce_ms": 700,
        "scroll_debounce_ms": 50,
        "toggle_on_modifiers_press": {
            "control": false,
            "alt": false,
            "shift": false,
            "platform": false,
            "function": false
        }
    },
    "buffer_line_height": "standard",
    "buffer_font_size": 14,
    "buffer_font_family": "Hack Nerd Font",
    "buffer_font_fallbacks": [
        ".ZedMono"
    ],
    "ui_font_size": 17,
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "vim_mode": true,
    "icon_theme": {
        "mode": "dark",
        "light": "Zed (Default)",
        "dark": "Zed (Default)"
    },
    "theme": {
        "mode": "dark",
        "light": "0x96f Theme",
        "dark": "0x96f Theme"
    },
    "tab_size": 4,
    "autosave": {
        "after_delay": {
            "milliseconds": 1000
        }
    },
    "disable_ai": true,
    "confirm_quit": true,
    "close_on_file_delete": true,
    "relative_line_numbers": true,
    "formatter": "language_server",
    "diagnostics": {
        "inline": {
            "enabled": true,
            "max_severity": "warning"
        }
    },
    "scroll_beyond_last_line": "off",
    "scrollbar": {
        "show": "never"
    },
    "terminal": {
        "cursor_shape": "bar",
        "line_height": "standard"
    },
    "tab_bar": {
        "show_nav_history_buttons": false
    },
    "tabs": {
        "show_close_button": "always"
    },
    "project_panel": {
        "dock": "right",
        "entry_spacing": "standard",
        "default_width": 300
    },
    "git_panel": {
        "dock": "right",
        "default_width": 300
    },
    "outline_panel": {
        "dock": "right",
        "default_width": 300
    }
}
